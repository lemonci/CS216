search:
	beq $a0, 0, return_zero # test for null pointer right away, avoid if's later
	
#	add $s0, $a0, 0			# let $s0 be the current node
	add $s1, $s0, 4			# let $s1 be the left subtree
	add $s2, $s0, 8			# let $s2 be the right subtree
	add $s3, $s0, 12		# let $s3 be the value
	move $s4, $a1			# let $s4 be the current depth
	move $s5, $ra			# let $s5 be the jump back link
	
	sub $sp, $sp, 24		# save registers on stack
	sw $s0, 0($sp)
	sw $s1, 4($sp)
	sw $s2, 8($sp)
	sw $s3, 12($sp)
	sw $s4, 16($sp)
	sw $s5, 20($sp)
	
	lw $a0, ($s0)			# load the "name" of node to $a0
	jal store_path			# call store_path
	lw $v0, ($s3)			# load the "value" of node to $v0
	beq  $v0, 1, restore		# check if the value of the node is equal to 1, if yes, go to restore
	
notfound:				# if the value of the node is not equal to 1
	add $a1, $a1, 1			# increment the depth by 1
	lw $a0, ($s1)			# load the leftchild
	jal search				# call search
	beq  $v0, 1, restore		# check if the value of the node is equal to 1, if yes, go to restore
	lw $a0, ($s2)			# load the rightchild
	jal search				# call search
	beq  $v0, 1, restore		# check if the value of the node is equal to 1, if yes, go to restore
	sub $a1, $a1, 1		# decrement the depth by 1

restore:
	lw $s0, 0($sp)	# restor registers from stack
	lw $s1, 4($sp)
	lw $s2, 8($sp)
	lw $s3, 12($sp)
	lw $s4, 16($sp)
	lw $s5, 20($sp)
	add $sp, $sp, 24
	move $ra, $s5
	jr $ra			# go back to the upper level function

return_zero:	# if the node is null
	li $v0, 0	# set $v0 to 0
	jr $ra

